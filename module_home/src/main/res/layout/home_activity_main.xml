<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_main_bk"
    tools:context="com.mycircle.mvvm.v.activity.HomeMainActivity">

<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/vp_home_main"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@id/ctl_home_main"
    app:layout_constraintTop_toTopOf="parent"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_home_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tl_textsize="10sp"
        app:tl_textSelectColor="@color/home_main_text_selected"
        app:tl_textUnselectColor="@color/home_main_text_unselected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tl_indicator_height="0dp"
        android:background="@color/home_main_bk_tm"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>